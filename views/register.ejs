<div class="welcome">
    <div class="welcome__inner">
        <h1>Register</h1>
        <% include ./partials/messages %>
            <form action="/auth/register" method="POST" class="welcome__form">
                <div class="welcome__form-group">
                    <label for="name">Name</label>
                    <input
                            type="name"
                            id="name"
                            name="name"
                            class="form-control"
                            placeholder="Enter Name"
                            value="<%= typeof name != 'undefined' ? name : '' %>"
                        />
                </div>
                <div class="welcome__form-group">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>"
                    />
                </div>
                <div class="welcome__form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Create Password"
                        value="<%= typeof password != 'undefined' ? password : '' %>"
                    />
                </div>
                <div class="welcome__form-group">
                    <label for="password2">Confirm Password</label>
                    <input
                        type="password"
                        id="password2"
                        name="password2"
                        class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                    />
                </div>
                <button type="submit" class="btn btn_orange"><span>Register</span></button>
                <p class="lead mt-4">Have An Account? <a href="/auth/login">Login</a></p>
            </form>
    </div>    
</div>