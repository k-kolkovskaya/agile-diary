<div class="welcome">
    <div class="welcome__inner">
        <h1>Log In</h1>
        <% include ./partials/messages %>
            <p class="block-text">New here? (:</p>
            <a href='/auth/register' class='block-text'><strong>Sign Up</strong></a>
            <form action="/auth/login" method="POST" class="welcome__form">
                <div class="welcome__form-group">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Enter Email"
                    />
                </div>
                <div class="welcome__form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Enter Password"
                    />
                </div>
                <button type="submit" class="btn btn_orange"><span>Login</span></button>
            </form>
    </div>    
</div>